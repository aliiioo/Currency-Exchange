@model IEnumerable<Application.Dtos.TransactionDtos.UsersTransactionsDto>

@{
    ViewData["Title"] = "AccountTransactions";
}

<h1>AccountTransactions</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransactionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromAccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToAccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeductedAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExchangeRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromAccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToAccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                @if (item.FromSender==false)
                {
                    <td>
                        -
                    </td>
                    <td>
                        -
                    </td>
                }
                else
                {
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.UserBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeductedAmount)
                    </td>

                }
                <td>
                    @Html.DisplayFor(modelItem => item.ExchangeRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletedAt)
                </td>

            </tr>
        }
    </tbody>
</table>
