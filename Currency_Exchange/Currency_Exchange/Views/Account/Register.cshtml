@model Application.Dtos.RegisterViewModel

<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Registery
            </h2>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="form_container">
                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div>
                            <input type="text" asp-for="FullName" class="form-control" placeholder="Full Name" />
                        </div>
                        <br/>
                        <div>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Email"/>
                        </div>
                        <br/>
                        <div>
                            <input type="text" asp-for="Phone" class="form-control" placeholder="Phone"/>
                        </div>
                        <br/>
                        <div>
                            <input type="password" asp-for="Password" class="form-control" placeholder="password"/>
                        </div>
                        <br/>
                        <div>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="RePassword" />
                        </div>
                        <br/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br/>
                        <div class="btn_box">
                            <button type="submit">
                                Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>@*
