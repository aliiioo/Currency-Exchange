@model IEnumerable<Application.Dtos.RegistrationDto.UserDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3><a asp-action="IndexCustomer" >Customers</a></h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>Roles</th>
            <th>Accounts</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @if (item.IsAdmin)
                {
                    <td>
                        <a asp-action="RemoveUserRole" asp-route-email="@item.Email">
                            Remove Admin Role
                        </a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="AssignUserToRole" asp-route-email="@item.Email">Add To Admin Role</a>
                    </td>
                }
                <td>
                    <a asp-action="UsersAccounts" asp-route-email="@item.Email">User Accounts</a>
                </td>
            </tr>
        }
    </tbody>
</table>
