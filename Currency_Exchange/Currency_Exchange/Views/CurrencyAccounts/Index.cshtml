@model IEnumerable<Application.Dtos.CurrencyDtos.CurrencyDtoShow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateCurrency">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyName)
                </td>
                <td>
                    <a asp-controller="CurrencyAccounts" asp-action="DetailCurrencyTransformRate" asp-route-currencyId="@item.CurrencyId" asp-route-currentCode="@item.CurrencyCode">
                         List Rate | 
                    </a>
                    <a asp-controller="CurrencyAccounts" asp-action="DetailCurrencyTransformFee" asp-route-currencyId="@item.CurrencyId" asp-route-currentCode="@item.CurrencyCode">
                         List Transforms Fees | 
                    </a>
                    <a asp-controller="CurrencyAccounts" asp-action="DetailCurrencyExchangeFee" asp-route-currencyId="@item.CurrencyId" asp-route-currentCode="@item.CurrencyCode">
                         List Exchange Fees
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
