@model IEnumerable<Application.Dtos.OthersAccountDto.OtherAccountViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateOthersBankAccount">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CartNumber)
            </td>
            <td>
                    <a asp-controller="OthersBank" asp-action="OthersBank" asp-route-accountId="@item.AccountId">
                    Detail |
                </a>
                    <a asp-controller="OthersBank" asp-action="UpdateBankAccount" asp-route-accountId="@item.AccountId">
                    Update |
                </a>
                    <a asp-controller="OthersBank" asp-action="DeleteOthersAccount" asp-route-accountId="@item.AccountId">
                    Delete |
                </a>
                
            </td>
        </tr>
}
    </tbody>
</table>
